
@model SignalR.Models.ViewModel.BookViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            @Html.ValidationSummary(true, "", new { htmlAttributes = new { @class = "text-danger" } })
            @Html.HiddenFor(model => model.ID)
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { htmlAttributes = new { @class = "text-danger" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Discription, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Discription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Discription, "", new { htmlAttributes = new { @class = "text-danger" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.selectedLanguage, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("selectedLanguage", (MultiSelectList)ViewBag.Languages)
                @Html.ValidationMessageFor(model => model.selectedLanguage, "", new { htmlAttributes = new { @class = "text-danger" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.selectedBookType, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("selectedBookType", (MultiSelectList)ViewBag.BookTypes)
                @Html.ValidationMessageFor(model => model.selectedBookType, "", new { htmlAttributes = new { @class = "text-danger" } })
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        }
    </div>
</div>

<div>
    <a href="/Book/Index">Back to List</a>
</div>

