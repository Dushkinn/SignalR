                @Html.ValidationMessageFor(model => model.FullName, "", new { htmlAttributes = new { @class = "text-danger" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Biography, htmlAttributes: new { @class = "control-label" })
