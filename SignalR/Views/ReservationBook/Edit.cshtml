
@model SignalR.Models.ViewModel.ReservationBookViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Reservation Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            @Html.ValidationSummary(true, "", new { htmlAttributes = new { @class = "text-danger" } })
            @Html.HiddenFor(model => model.ID)
            <div class="form-group">
                @Html.LabelFor(model => model.selectedBookItem, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("selectedBookItem", (MultiSelectList)ViewBag.BookItems)
                @Html.ValidationMessageFor(model => model.selectedBookItem, "", new { htmlAttributes = new { @class = "text-danger" } })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.selectedUser, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("selectedUser", (MultiSelectList)ViewBag.Users)
                @Html.ValidationMessageFor(model => model.selectedUser, "", new { htmlAttributes = new { @class = "text-danger" } })
            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        }
    </div>
</div>

<div>
    <a href="/ReservationBook/Index">Back to List</a>
</div>

